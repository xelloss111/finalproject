<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="kr.co.anolja.repository.mapper.BoardMapper">
	<resultMap type="board" id="boardMap">
		<result column="anonymous_id" property="anonymousId" />
		<result column="pass" property="pass" />
		<result column="bNo" property="bNo" />
		<result column="group_bno" property="groupBno" />
		<result column="group_blist" property="groupBlist" />
		<result column="depth" property="depth" />
		<result column="title" property="title" />
		<result column="content" property="content" />
		<result column="reg_date" property="regDate" />
		<result column="view_cnt" property="viewCnt" />
	</resultMap>
	
	<select id="boardList" resultMap="boardMap">
		select *
		from tb_board
		order by bNo desc;
	</select>
	
	<select id="boardDetail" parameterType="int" resultType="board">
		select *
		from tb_board
		where bNo = #{bNo}
	</select>
	
	<insert id="boardInsert" parameterType="board">
	<selectKey resultType="int" keyProperty="bNo" order="AFTER" >
             select last_insert_ID()
    </selectKey>
		insert into tb_board(
			group_bno, anonymous_id, title, content, pass
		)values(
			#{bNo},
			#{anonymousId}, 
			#{title}, 
			#{content}, 
			#{pass}
		)
	</insert>
	
	<update id="boardUpdateNo" parameterType="int">
		update tb_board
		   set #{group_bNo} = #{bNo}
		   where bNo = #{bNo}
	</update>
	
	<update id="boardUpdate" parameterType="board">
		update tb_board
			set title = #{title},
				content = #{content},
				pass = #{pass}
			where bNo = #{bNo} 
	</update>
	
	<delete id="boardDelete" parameterType="int">
		delete from tb_board
		where bNo = #{bNo}
	</delete>
	
	<!-- 파일 첨부시작 -->
	
	<resultMap id="boardFileMap" type="boardFile">
		<result column="fNo" property="fNo" />
		<result column="bNo" property="bNo" />
		<result column="path" property="path" /> 
		<result column="ori_name" property="oriName" /> 
		<result column="sys_name" property="sysName" />
		<result column="file_size" property="fileSize" />
	</resultMap>
	
	<insert id="boardInsertFile" parameterType="boardFile">
		insert into tb_file (
			bNo, path, ori_name, sys_name, file_size
		) values (
			#{bNo}, #{path}, #{oriName}, #{sysName}, #{fileSize}		
		)
	</insert> 
</mapper>
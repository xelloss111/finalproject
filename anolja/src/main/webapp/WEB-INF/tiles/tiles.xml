<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC 
    "-//Apache Software Foundation//DTD Tiles Configuration 2.0//EN" 
    "http://tiles.apache.org/dtds/tiles-config_2_0.dtd">
<tiles-definitions>
    <definition name="classic" template="/WEB-INF/jsp/tileLayout/baseLayout.jsp">
        <put-attribute name="header" value="/WEB-INF/jsp/tilesView/header.jsp" />
        <put-attribute name="footer" value="/WEB-INF/jsp/tilesView/footer.jsp" />
    </definition>
    <definition name="*/*" extends="classic">
        <put-attribute name="content" value="/WEB-INF/jsp/view/{1}/{2}.jsp" />
    </definition>
</tiles-definitions>